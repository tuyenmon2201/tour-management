extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head(pageTitle)

        .row
            .col-12
                table(class="table table-bordered")
                    thead
                        tr
                            th STT
                            th Ảnh
                            th Tiêu đề
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Hành động
                    tbody
                        tr
                            td 1
                            td
                                img(src="https://backend.daca.vn/assets/tour/images/tour-ha-long.jpg" alt="Tour Hạ Long" width="80px")
                            td
                                a(href=`/tours/detail/:slugTour`) Tour Hạ Long
                            td 1,200,000đ
                            td
                                input(
                                    type="number"
                                    name="quantity"
                                    value="1"
                                    min="1"
                                        item-id=":tourId"
                                    style="width: 60px"
                                )
                            td 1,200,000đ
                            td
                                button(
                                    btn-delete=":tourId"
                                    class="btn btn-sm btn-danger"
                                ) Xóa

                h5(class="text-right mb-4") Tổng đơn hàng: <span total-price>0</span>đ
                
        .row
            .col-12
                +box-head("Thông tin khách hàng")
                form(form-order)
                    div(class="form-group")
                        label(for="fullName") Họ tên
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                        )
                    div(class="form-group")
                        label(for="phone") Số điện thoại
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            required
                        )
                    div(class="form-group")
                        label(for="note") Ghi chú
                        textarea(
                            class="form-control"
                            id="note"
                            name="note"
                            rows="2"
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-success btn-block"
                        ) ĐẶT TOUR